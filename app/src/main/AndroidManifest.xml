<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.naviforyou">

    <!-- 위치 추적 권한 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <meta-data
            android:name="com.naver.maps.map.CLIENT_ID"
            android:value="shgy3jthid" />

        <activity android:name=".Activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Activity.SearchActivity"
            android:noHistory="true">
        </activity>

        <activity android:name=".Activity.RouteMenuActivity">
        </activity>

        <activity android:name=".Activity.SubwayActivity">
        </activity>

        <activity android:name=".Activity.LineActivity">
        </activity>

        <activity android:name=".Activity.FindingMapActivity">
        </activity>

        <activity android:name=".Activity.SubwayMapActivity">
        </activity>

    </application>

</manifest>