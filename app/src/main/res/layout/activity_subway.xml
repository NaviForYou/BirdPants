<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBF9ED">
    <RelativeLayout
        android:layout_width="390dp"
        android:layout_height="390dp"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/subway_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            android:background="#0d3692"
            android:gravity="center"
            android:text="1호선"
            android:textColor="#FFFFFF"
            android:textSize="30dp"></TextView>

        <TextView
            android:id="@+id/subway_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            android:layout_toRightOf="@id/subway_1"
            android:background="#33a23d"
            android:gravity="center"
            android:text="2호선"
            android:textColor="#FFFFFF"
            android:textSize="30dp"></TextView>
        <TextView
            android:id="@+id/subway_3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            android:layout_toRightOf="@id/subway_2"
            android:background="#fe5d10"
            android:gravity="center"
            android:text="3호선"
            android:textColor="#FFFFFF"
            android:textSize="30dp"></TextView>
        <TextView
            android:id="@+id/subway_4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/subway_1"
            android:layout_margin="15dp"
            android:background="#00a2d1"
            android:gravity="center"
            android:text="4호선"
            android:textColor="#FFFFFF"
            android:textSize="30dp"></TextView>
        <TextView
            android:id="@+id/subway_5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/subway_2"
            android:layout_margin="15dp"
            android:layout_toRightOf="@id/subway_4"
            android:background="#8b50a4"
            android:gravity="center"
            android:text="5호선"
            android:textColor="#FFFFFF"
            android:textSize="30dp"></TextView>
        <TextView
            android:id="@+id/subway_6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/subway_3"
            android:layout_margin="15dp"
            android:layout_toRightOf="@id/subway_5"
            android:background="#c55c1d"
            android:gravity="center"
            android:text="6호선"
            android:textColor="#FFFFFF"
            android:textSize="30dp"></TextView>
        <TextView
            android:id="@+id/subway_7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/subway_4"
            android:layout_margin="15dp"
            android:background="#54640d"
            android:gravity="center"
            android:text="7호선"
            android:textColor="#FFFFFF"
            android:textSize="30dp"></TextView>
        <TextView
            android:id="@+id/subway_8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/subway_5"
            android:layout_margin="15dp"
            android:layout_toRightOf="@id/subway_7"
            android:background="#f14c82"
            android:gravity="center"
            android:text="8호선"
            android:textColor="#FFFFFF"
            android:textSize="30dp"></TextView>
        <TextView
            android:id="@+id/subway_9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/subway_6"
            android:layout_margin="15dp"
            android:layout_toRightOf="@id/subway_8"
            android:background="#aa9872"
            android:gravity="center"
            android:text="9호선"
            android:textSize="30dp"
            android:textColor="#FFFFFF"></TextView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#095CD7"
            android:id="@+id/menu">
            <ImageView
                android:id="@+id/find_subway"
                android:layout_width="82dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:src="@mipmap/map"/>
                <!--길찾기--><!--id/find_subway-->
            <ImageView
                android:id="@+id/subway_subway"
                android:layout_width="82dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:src="@mipmap/in_subway"
                android:layout_toRightOf="@id/find_subway"/>
                 <!--지하철 지도--><!--id/subway_subway--><!--노란 아이콘-->
            <ImageView
                android:id="@+id/bookmark_subway"
                android:layout_width="82dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:src="@mipmap/bookmark"
                android:layout_toRightOf="@id/subway_subway"/>
                <!--즐겨찾기--><!--id/bookmark_subway-->
            <ImageView
                android:id="@+id/setting_subway"
                android:layout_width="82dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:src="@mipmap/home"
                android:layout_toRightOf="@id/bookmark_subway"/>
                <!--설정--><!--id/setting_subway-->
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>