<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/box_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/box_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible">
                <TextView
                    android:id="@+id/hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="35dp"
                    android:textColor="#000000"
                    android:visibility="visible"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="시간 "
                    android:textSize="35dp"
                    android:textColor="#000000"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/box_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible">
                <TextView
                    android:id="@+id/min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="35dp"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="분"
                    android:textSize="35dp"
                    android:textColor="#000000"/>
            </LinearLayout>
        </LinearLayout>
        <!-- 총 시간 -->
        <LinearLayout
            android:id="@+id/box_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/box_time">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카드"/>
            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원"/>
        </LinearLayout>
        <!-- 총 비용 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/box_money"
            android:layout_toRightOf="@id/box_time">
            <TextView
                android:id="@+id/startAMPM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오후"/>
            <TextView
                android:id="@+id/startHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"/>
            <TextView
                android:id="@+id/startMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ~ "/>
            <TextView
                android:id="@+id/endAMPM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오후"/>
            <TextView
                android:id="@+id/endHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"/>
            <TextView
                android:id="@+id/endMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"/>
        </LinearLayout>
        <!-- 시작시간/도착시간 -->
        <!-- 가는 길 표기 -->
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="25dp"
        android:orientation="horizontal"
        android:background="#E3E9ED">

        <TextView
            android:id="@+id/object"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_weight="20"
            android:background="#FF0000"
            android:text="20분"
            android:textColor="#E3E9ED"
            android:textAlignment="center"
            android:drawableLeft="@drawable/customise_wheelchair"
            android:gravity="center_horizontal" />

    </LinearLayout>
</LinearLayout>