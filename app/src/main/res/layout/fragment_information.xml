<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"><!--이 프래그먼트도 마찬가지 이게 화면 아래창에 뜨는 건물 정보 같은 느낌인데 프래그먼트 1번이 안되니까 그냥 얘도 안함ㅋ-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/facility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#FBF9ED"
            android:orientation="vertical">

            <TextView
                android:id="@+id/place_name"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="left|center"
                android:scrollbars="horizontal"
                android:text="안드로이드"
                android:textColor="#000000"
                android:textSize="35dp"></TextView>

            <TextView
                android:id="@+id/place_address"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:gravity="left|center"
                android:text="안드로이드"
                android:textColor="#000000"
                android:textSize="23dp"></TextView>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#095CD7"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/call"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:src="@mipmap/call"></ImageView><!--전화하기-->
            <ImageView
                android:id="@+id/favorite"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_toRightOf="@id/call"
                android:src="@mipmap/plus_bookmark_before"></ImageView><!--즐겨찾기에 추가하기-->
            <!--즐겨찾기에 추가되면 mipmap/plus_bookmark_after로 바꿔줘-->

            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="match_parent"></LinearLayout>

            <ImageView
                android:id="@+id/start"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_toLeftOf="@id/end"
                android:src="@mipmap/start"></ImageView><!--출발-->
            <ImageView
                android:id="@+id/end"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:src="@mipmap/end"></ImageView><!--도착-->
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>