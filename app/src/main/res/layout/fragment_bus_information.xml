<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:background="#FBF9ED">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/bus_station_name"
                android:gravity="center_vertical"
                android:textSize="35dp"
                android:textColor="#000000"
                android:text="버루말교"></TextView>
            <!--정류장 이름-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/bus_station_code"
                    android:gravity="center_vertical"
                    android:layout_gravity="bottom"
                    android:textSize="23dp"
                    android:textColor="#000000"
                    android:text="11465"></TextView>
                    <!--정류장 숫자 코드-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:textSize="23dp"
                    android:text=" | "></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/bus_station_way"
                    android:gravity="center_vertical"
                    android:textSize="23dp"
                    android:textColor="#000000"
                    android:text="장위래미안아파트 방면"></TextView>
                    <!--버스 방향-->
            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#095CD7">
            <Button
                android:id="@+id/low_bus"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:textColor="#000000"
                android:text="일반"></Button><!--일반버스-->
            <Button
                android:id="@+id/general_bus"
                android:layout_toRightOf="@id/low_bus"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:textColor="#000000"
                android:text="저상"></Button><!--저상버스-->
            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/start_bus_station"
                android:layout_toLeftOf="@id/end_bus_station"></ImageView><!--출발-->
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/end_bus_station"></ImageView><!--도착-->
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <!--3개 쯤 나오고 더 많으면 스크롤로 하는게 좋을듯...-->
                    <!--힘들면 제일 빠른거 1~3개만 나오게 하고-->
                    <ImageView
                        android:id="@+id/bus_bookmark_1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:src="@mipmap/ic_launcher"></ImageView><!--즐겨찾기-->
                    <TextView
                        android:id="@+id/bus_length_1"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:layout_toRightOf="@id/bus_bookmark_1"
                        android:gravity="center"
                        android:background="#1E90FF"
                        android:textColor="#000000"
                        android:text="간선"></TextView><!--간선, 지선-->
                    <TextView
                        android:id="@+id/bus_num_1"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_toRightOf="@id/bus_length_1"
                        android:layout_margin="5dp"
                        android:textSize="23dp"
                        android:textColor="#000000"
                        android:text="0000"></TextView>
                    <TextView
                        android:id="@+id/bus_time_1"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:textSize="15dp"
                        android:textColor="#FF0000"
                        android:text="7분 51초 (9번쨰 전, 여유)"></TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <!--3개 쯤 나오고 더 많으면 스크롤로 하는게 좋을듯...-->
                    <!--힘들면 제일 빠른거 1~3개만 나오게 하고-->
                    <ImageView
                        android:id="@+id/bus_bookmark_2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:src="@mipmap/ic_launcher"></ImageView><!--즐겨찾기-->
                    <TextView
                        android:id="@+id/bus_length_2"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:layout_toRightOf="@id/bus_bookmark_2"
                        android:gravity="center"
                        android:background="#00FF00"
                        android:textColor="#000000"
                        android:text="지선"></TextView><!--간선, 지선-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_toRightOf="@id/bus_length_2"
                        android:layout_margin="5dp"
                        android:textSize="23dp"
                        android:textColor="#000000"
                        android:text="0000"></TextView>
                    <TextView
                        android:id="@+id/bus_time_2"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:textSize="15dp"
                        android:textColor="#FF0000"
                        android:text="11분 37초 (12번쨰 전, 여유)"></TextView>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>