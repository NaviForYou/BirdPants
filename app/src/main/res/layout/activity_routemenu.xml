<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity"
    android:background="#FBF9ED">

    <RelativeLayout
        android:id="@+id/searching"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/searchStart"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:hint="  출발지를 검색하세요"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/round_rayout"/>

        <TextView
            android:id="@+id/searchEnd"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:layout_below="@id/searchStart"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="10dp"
            android:hint="  도착지를 검색하세요"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/round_rayout" />

        <ImageButton
            android:id="@+id/rotation"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginVertical="10dp"
            android:layout_toRightOf="@id/searchStart"
            android:src="@drawable/ic_launcher_foreground"/>

        <ImageButton
            android:id="@+id/clear"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginVertical="10dp"
            android:layout_below="@id/rotation"
            android:layout_toRightOf="@id/searchEnd"
            android:src="@drawable/ic_launcher_foreground"/>
    </RelativeLayout>
    <!-- 출발/도착지검색칸 및 버튼 두개 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/searching"
        android:layout_above="@id/menuBar"
        android:visibility=""
        android:id="@+id/route">
        <RelativeLayout
            android:id="@+id/result_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/way"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal" />

            <ImageButton
                android:id="@+id/lift"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_toRightOf="@id/way"
                android:layout_margin="10dp"
                android:src="@mipmap/ic_launcher"/>
            <ImageButton
                android:id="@+id/bookMark"
                android:layout_toRightOf="@id/lift"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:src="@mipmap/ic_launcher"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/result_1">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/box_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/box_hour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="visible">
                            <TextView
                                android:id="@+id/hour"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="35dp"
                                android:textColor="#000000"
                                android:visibility="visible"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="시간 "
                                android:textSize="35dp"
                                android:textColor="#000000"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/box_min"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="visible">
                            <TextView
                                android:id="@+id/min"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="35dp"
                                android:textColor="#000000"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="분"
                                android:textSize="35dp"
                                android:textColor="#000000"/>
                        </LinearLayout>
                    </LinearLayout>
                    <!-- 총 시간 -->
                    <LinearLayout
                        android:id="@+id/box_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/box_time">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="카드"/>
                        <TextView
                            android:id="@+id/money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="원"/>
                    </LinearLayout>
                    <!-- 총 비용 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/box_money"
                        android:layout_toRightOf="@id/box_time">
                        <TextView
                            android:id="@+id/startAMPM"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="오후"/>
                        <TextView
                            android:id="@+id/startHour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"/>
                        <TextView
                            android:id="@+id/startMin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" ~ "/>
                        <TextView
                            android:id="@+id/endAMPM"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="오후"/>
                        <TextView
                            android:id="@+id/endHour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"/>
                        <TextView
                            android:id="@+id/endMin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00"/>
                    </LinearLayout>
                    <!-- 시작시간/도착시간 -->
                    <ListView
                        android:id="@+id/listView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/box_time"/>
                    <!-- 가는 길 표기 -->
                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>

    </RelativeLayout>

    <!-- 화면 가운데 부분 -->

    <LinearLayout
        android:id="@+id/menuBar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#5B70DA"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/btn_finding"
            android:layout_weight="1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginVertical="7dp"
            android:layout_marginHorizontal="15dp"
            android:src="@drawable/ic_launcher_foreground" />
            <!--길찾기--><!--id/find_find--><!--노란 아이콘-->
        <ImageButton
            android:id="@+id/btn_subway"
            android:layout_weight="1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginVertical="7dp"
            android:layout_marginHorizontal="15dp"
            android:src="@drawable/ic_launcher_foreground"/>
            <!--지하철--><!--id/subway_find-->
        <ImageButton
            android:id="@+id/btn_taxi"
            android:layout_weight="1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginVertical="7dp"
            android:layout_marginHorizontal="15dp"
            android:src="@drawable/ic_launcher_foreground"/>
            <!--즐겨찾기--><!--id/bookmark_find-->
        <ImageButton
            android:id="@+id/btn_bookMark"
            android:layout_weight="1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginVertical="7dp"
            android:layout_marginHorizontal="15dp"
            android:src="@drawable/ic_launcher_foreground"/>
            <!--설정--><!--id/setting_find-->
    </LinearLayout>
    <!-- 가장 아래의 버튼 바 -->
</RelativeLayout>